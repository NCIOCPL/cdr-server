<!--
 * $Id: CdrGrp.xml,v 1.1 2000-04-22 13:51:07 bkline Exp $
 *
 * Set of commands to exercise the commands to add, drop, modify, view,
 * and list CDR groups.  First we try some commands using an account
 * which is not authorized to perform them.  Then, using an account
 * which is properly authorized, we:
 *
 *  1. List the existing CDR group.
 *  2. Add two new groups.
 *  3. Display the information for the new groups.
 *  4. List the CDR groups again.
 *  5. Modify one of the new groups, changing its name, actions, and comment.
 *  6. Try to display the group using its old name.
 *  7. Display the group information using its new name.
 *  8. List the CDR groups.
 *  9. Modify the same group, dropping its actions and comment.
 * 10. Display the modified group.
 * 11. Drop one of the new groups.
 * 12. List the remaining CDR groups.
 * 13. Drop the other test group.
 * 14. List the remaining CDR groups.
 *
 * $Log:
 *
-->

<CdrCommandSet>
 <CdrCommand>
  <CdrLogon>
   <UserName>rmk</UserName>
   <Password>***REDACTED***</Password>
  </CdrLogon>
 </CdrCommand>
 <CdrCommand>
  <CdrAddGrp>
   <GrpName>ZOMBIES</GrpName>
   <Auth><Action>ADD DOCUMENT</Action><DocType>Person</DocType></Auth>
   <Auth><Action>ADD DOCUMENT</Action><DocType>Org</DocType></Auth>
   <Auth><Action>PUBLISH DOCUMENT</Action><DocType>Person</DocType></Auth>
   <Auth><Action>PUBLISH DOCUMENT</Action><DocType>Org</DocType></Auth>
   <Auth><Action>CREATE USER</Action></Auth>
   <UserName>rmk</UserName>
   <Comment>This group is really dead!</Comment>
  </CdrAddGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrAddGrp>
   <GrpName>ROBO COPS</GrpName>
   <Auth><Action>DELETE DOCUMENT</Action><DocType>Person</DocType></Auth>
   <Auth><Action>DELETE DOCUMENT</Action><DocType>Org</DocType></Auth>
   <Auth><Action>MODIFY DOCUMENT</Action><DocType>Person</DocType></Auth>
   <Auth><Action>MODIFY DOCUMENT</Action><DocType>Org</DocType></Auth>
   <Auth><Action>DELETE USER</Action></Auth>
   <UserName>ahm</UserName>
   <UserName>mmr</UserName>
   <Comment>These folks will hurt you!</Comment>
  </CdrAddGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrLogoff/>
 </CdrCommand>
 <CdrCommand>
  <CdrLogon>
   <UserName>mmr</UserName>
   <Password>***REDACTED***</Password>
  </CdrLogon>
 </CdrCommand>
 <CdrCommand>
  <CdrListGrps/>
 </CdrCommand>
 <CdrCommand>
  <CdrAddGrp>
   <GrpName>ZOMBIES</GrpName>
   <Auth><Action>ADD DOCUMENT</Action><DocType>Person</DocType></Auth>
   <Auth><Action>ADD DOCUMENT</Action><DocType>Org</DocType></Auth>
   <Auth><Action>PUBLISH DOCUMENT</Action><DocType>Person</DocType></Auth>
   <Auth><Action>PUBLISH DOCUMENT</Action><DocType>Org</DocType></Auth>
   <Auth><Action>CREATE USER</Action></Auth>
   <UserName>rmk</UserName>
   <Comment>This group is really dead!</Comment>
  </CdrAddGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrAddGrp>
   <GrpName>ROBO COPS</GrpName>
   <Auth><Action>DELETE DOCUMENT</Action><DocType>Person</DocType></Auth>
   <Auth><Action>DELETE DOCUMENT</Action><DocType>Org</DocType></Auth>
   <Auth><Action>MODIFY DOCUMENT</Action><DocType>Person</DocType></Auth>
   <Auth><Action>MODIFY DOCUMENT</Action><DocType>Org</DocType></Auth>
   <Auth><Action>DELETE USER</Action></Auth>
   <UserName>ahm</UserName>
   <UserName>mmr</UserName>
   <Comment>These folks will hurt you!</Comment>
  </CdrAddGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrGetGrp>
   <GrpName>ROBO COPS</GrpName>
  </CdrGetGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrGetGrp>
   <GrpName>ZOMBIES</GrpName>
  </CdrGetGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrListGrps/>
 </CdrCommand>
 <CdrCommand>
  <CdrModGrp>
   <GrpName>ROBO COPS</GrpName>
   <NewGrpName>BACK STREET BOYZ</NewGrpName>
   <Auth><Action>CREATE USER</Action></Auth>
   <Auth><Action>ADD DOCUMENT</Action><DocType>Org</DocType></Auth>
   <Comment>Very popular bunch...</Comment>
  </CdrModGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrGetGrp>
   <GrpName>ROBO COPS</GrpName>
  </CdrGetGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrGetGrp>
   <GrpName>BACK STREET BOYZ</GrpName>
  </CdrGetGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrListGrps/>
 </CdrCommand>
 <CdrCommand>
  <CdrModGrp>
   <GrpName>BACK STREET BOYZ</GrpName>
  </CdrModGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrGetGrp>
   <GrpName>BACK STREET BOYZ</GrpName>
  </CdrGetGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrListGrps/>
 </CdrCommand>
 <CdrCommand>
  <CdrDelGrp>
   <GrpName>ZOMBIES</GrpName>
  </CdrDelGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrListGrps/>
 </CdrCommand>
 <CdrCommand>
  <CdrDelGrp>
   <GrpName>BACK STREET BOYZ</GrpName>
  </CdrDelGrp>
 </CdrCommand>
 <CdrCommand>
  <CdrListGrps/>
 </CdrCommand>
 <CdrCommand>
  <CdrLogoff/>
 </CdrCommand>
</CdrCommandSet>
