<?xml version="1.0"?>
   <xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                    version="1.0"
                  xmlns:cdr="cips.nci.nih.gov/cdr">
   <xsl:output method="text"/>
   <!--Filter written by C.Burg - 10/30/2001 -->

   <!-- ==========================================================
          This program is a filter to display the Terminology
          titles  
        ==========================================================-->
   <xsl:template match="Term">
   <!-- ======================================
         Display Preferred Term name 
        ======================================-->
      <xsl:if test="PreferredName">
         <xsl:for-each select="PreferredName">
            <xsl:value-of select="."/>;<xsl:text/>
         </xsl:for-each>
      </xsl:if>
      <!-- ====================================
            Display Term Type 
           ====================================-->
      <xsl:if test="TermType/TermTypeName">
         <xsl:for-each select="TermType/TermTypeName">
            <xsl:value-of select="."/>;<xsl:text/>
         </xsl:for-each>
      </xsl:if>
      <!-- =========================================
            Display Semantic Type 
           =========================================-->
      <xsl:if test="SemanticTypeText">
         <xsl:for-each select="SemanticTypeText">
            <xsl:value-of select="."/>
            <xsl:if test="position() !=last()">;<xsl:text/></xsl:if>
         </xsl:for-each>
      </xsl:if>
   </xsl:template>

  </xsl:transform>