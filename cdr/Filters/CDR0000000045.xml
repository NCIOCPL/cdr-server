<!-- ===================================================================

        Template rule used to do XML to XML transformations which
        copies any attribute node, or node that is child of of something 
    ====================================================================== -->

   <xsl:template match="@*|node()">
     <xsl:copy>
     <xsl:apply-templates select="@*"/>
     <xsl:apply-templates/>
     </xsl:copy> 
     </xsl:template>

</xsl:transform>