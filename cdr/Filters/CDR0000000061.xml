<?xml version="1.0"?>
 <xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                version="1.0"
                xmlns:cdr="cips.nci.nih.gov/cdr">
  <xsl:output method="html"/>

  <xsl:template match="/">
   <!-- <!DOCTYPE HTML PUBLIC '-//IETF//DTD HTML//EN' /> -->
   <HTML>
    <HEAD>
     <TITLE>@@DOCID@@</TITLE>
     <!-- META HTTP-EQUIV="Pragma" CONTENT="no-cache" / -->
     <LINK REL='stylesheet' 
           HREF='/stylesheets/term.css' 
           TYPE='text/css' />
    </HEAD>
    <BASEFONT FACE='Arial, Helvetica, sans-serif' />
    <xsl:apply-templates select="Term"/>
   </HTML>
  </xsl:template>

  <xsl:template match='Term'>
   <BODY>
    <HR />
    <H1>Term Document @@DOCID@@</H1>
    <HR />
    <H2><xsl:value-of select="TermName"/></H2>
    <TABLE>
     <TR>
      <TH ALIGN='right'>Term Status:</TH>
      <TD><xsl:value-of select='TermStatus'/></TD>
     </TR>
     <TR>
      <TH ALIGN='right'>Status Date:</TH>
      <TD>
       <xsl:value-of select='concat(substring(TermStatusDate, 1, 10), " ",
                                    substring(TermStatusDate, 12, 8))'/>
      </TD>
     </TR>
     <xsl:for-each select="TermPrimaryType">
      <TR>
       <TH ALIGN='right' NOWRAP='1'>Primary Term Type:</TH>
       <TD><xsl:value-of select="."/></TD>
      </TR>
     </xsl:for-each>
     <xsl:for-each select="TermAlternateType">
      <TR>
       <TH ALIGN='right'>Alternate Type:</TH>
       <TD><xsl:value-of select="."/></TD>
      </TR>
     </xsl:for-each>
     <TR>
      <TH ALIGN='right'>Upcode Flag:</TH> <!-- LINE 50 -->
      <TD><xsl:value-of select='TermUpcodeFlag'/></TD>
     </TR>
     <TR>
      <TH ALIGN='right'>Root Flag:</TH>
      <TD><xsl:value-of select='TermRootFlag'/></TD>
     </TR>
     <xsl:for-each select="TermSynonym">
      <TR>
       <TH ALIGN='right'>Synonym:</TH>
       <TD><xsl:value-of select="."/></TD> <!-- LINE 60 -->
      </TR>
     </xsl:for-each>
     <xsl:for-each select="TermParent">
      <xsl:if test="@Product = 'Cancer Information Product'">
       <TR>
        <TH ALIGN='right'>Parent Term:</TH>
        <TD><xsl:value-of select="concat(node(), ' (', @cdr:ref, ')')"/></TD>
       </TR>
      </xsl:if>
     </xsl:for-each>
     <xsl:for-each select="TermRelatedTerm">
      <xsl:if test="@Product = 'Cancer Information Product'">
       <TR>
        <TH ALIGN='right'>
         <xsl:value-of select="concat('Related Term (',
                                      @Relationship, '):')"/>
        </TH>
        <TD><xsl:value-of select="concat(node(), ' (', @cdr:ref, ')')"/></TD>
       </TR>
      </xsl:if>
     </xsl:for-each>
     <xsl:for-each select="TermDef">
      <TR>
       <TH ALIGN='right' VALIGN='top'>Definition:</TH>
       <TD><xsl:value-of select="."/></TD>
      </TR>
     </xsl:for-each>
    </TABLE>
   </BODY>
  </xsl:template>
 </xsl:transform>