<?xml version="1.0"?>
  <xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                 version="1.0">
   <xsl:output method="html"/>

   <xsl:template match="/">
    <html>
     <head>
      <title><xsl:value-of select="document('cdrutil:/docid')"/></title>
     </head>
     <basefont face='Arial, Helvetica, sans-serif' />
     <xsl:apply-templates select='GlossaryTerm'/>
    </html>
   </xsl:template>

   <xsl:template match='GlossaryTerm'>
    <body>
     <center>
      <b>
       <font size='4'>Glossary Term QC Report</font>
       <br />
       <font size='3'>
         <xsl:value-of 
           select="document('cdrutil:/date/%25B %25#d, %25Y %25#I:%25M%25p')"/>
       </font>
      </b>
     </center>
     <br /><br />
     <table border ='0'>
      <tr>
       <th align='right' nowrap='1'>Term Name: </th>
       <td><xsl:value-of select='TermName'/></td>
      </tr>
      <xsl:for-each select='TermPronunciation'>
       <tr>
        <th align='right' nowrap='1'>Term Pronunciation: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <tr>
       <th align='right' nowrap='1' valign='top'>Term Definition: </th>
       <td><xsl:value-of select='TermDefinition'/></td>
      </tr>
      <xsl:for-each select='SpanishTermName'>
       <tr>
        <th align='right' nowrap='1'>Spanish Term Name: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <xsl:for-each select='SpanishTermDefinition'>
       <tr>
        <th align='right' nowrap='1' valign='top'>Spanish Term Definition: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <tr>
       <th align='right' nowrap='1'>Term Source: </th>
       <td><xsl:value-of select='TermSource'/></td>
      </tr>
      <tr>
       <th align='right' nowrap='1'>Term Type: </th>
       <td><xsl:value-of select='TermType'/></td>
      </tr>
      <tr>
       <th align='right' nowrap='1'>Term Status Date: </th>
       <td><xsl:value-of select='StatusDate'/></td>
      </tr>
      <xsl:for-each select='DateLastModified'>
       <tr>
        <th align='right' nowrap='1'>Date Last Modified: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <xsl:for-each select='PdqKey'>
       <tr>
        <th align='right' nowrap='1'>PDQ Key: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
     </table>
    </body>
   </xsl:template>

  </xsl:transform>