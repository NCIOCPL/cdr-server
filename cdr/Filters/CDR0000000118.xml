<?xml version="1.0"?>
  <xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                 xmlns:cdr="cips.nci.nih.gov/cdr"
                 version="1.0">
   <xsl:output method="html"/>

   <xsl:template match="/">
    <html>
     <head>
      <title><xsl:value-of select="document('cdrutil:/docid')"/></title>
     </head>
     <basefont face='Arial, Helvetica, sans-serif' />
     <xsl:apply-templates select='PoliticalSubUnit'/>
    </html>
   </xsl:template>

   <xsl:template match='PoliticalSubUnit'>
    <body>
     <center>
      <b>
       <font size='4'>Political SubUnit QC Report</font>
       <br />
       <font size='3'>
         <xsl:value-of 
           select="document('cdrutil:/date/%25B %25#d, %25Y %25#I:%25M%25p')"/>
       </font>
      </b>
     </center>
     <br /><br />
     <table border ='0'>
      <tr>
       <th align='right' nowrap='1'>Full Name: </th>
       <td><xsl:value-of select='PoliticalSubUnitFullName'/></td>
      </tr>
      <xsl:for-each select='PoliticalSubUnitShortName'>
       <tr>
        <th align='right' nowrap='1'>Short Name: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <xsl:for-each select='PoliticalSubUnitAlternateName'>
       <tr>
        <th align='right' nowrap='1'>Alternate Name: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <xsl:variable name="country"
                  select="document(concat('cdr:', Country/@cdr:ref))"/>
      <tr>
       <th align='right'>Country: </th>
       <td>
        <xsl:value-of 
             select="concat($country/Country/CountryFullName, ' (',
                            Country/@cdr:ref, ')')"/>
       </td>
      </tr>
      <xsl:for-each select='DateLastModified'>
       <tr>
        <th align='right' nowrap='1'>Date Last Modified: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <xsl:for-each select='PdqKey'>
       <tr>
        <th align='right' nowrap='1'>PDQ Key: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
     </table>
    </body>
   </xsl:template>

  </xsl:transform>