<?xml version="1.0"?>
 <xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                version="1.0"
                xmlns:cdr="cips.nci.nih.gov/cdr">
  <xsl:output method="html"/>

  <xsl:template match="/">
   <!-- <!DOCTYPE HTML PUBLIC '-//IETF//DTD HTML//EN' /> -->
   <HTML>
    <HEAD> <!-- LINE 10 -->
     <TITLE>@@DOCID@@</TITLE>
     <!-- META HTTP-EQUIV="Pragma" CONTENT="no-cache" / -->
     <LINK REL='stylesheet' 
           HREF='/stylesheets/term.css' 
           TYPE='text/css' />
    </HEAD>
    <BASEFONT FACE='Arial, Helvetica, sans-serif' />
    <xsl:apply-templates select="Organization"/>
   </HTML>
  </xsl:template> <!-- LINE 20 -->

  <xsl:template match='Organization'>
   <BODY>
    <HR />
    <H1>Organization Document @@DOCID@@</H1>
    <HR />
    <H2><xsl:value-of select="OrganizationNameInformation/OfficialName/Name"/></H2>
    <TABLE>
     <xsl:for-each select="OrganizationType">
      <TR>
       <TH ALIGN='right' NOWRAP='1'>Org Type:</TH>
       <TD><xsl:value-of select="."/></TD>
      </TR>
     </xsl:for-each>
     <xsl:for-each select="Status/CurrentStatus">
      <TR>
       <TH ALIGN='right'>Status:</TH>
       <TD><xsl:value-of select="."/></TD>
      </TR>
     </xsl:for-each>
<!--
     <xsl:apply-templates select='OrgProductStatus[Product = "Cancer Information Product"]'/>
-->
     <xsl:for-each select="OrganizationLocations/Location">
      <xsl:for-each select="PostalAddress/Street">
       <TR>
        <TH ALIGN='right'>Street:</TH>
        <TD><xsl:value-of select="."/></TD>
       </TR>
      </xsl:for-each>
      <xsl:for-each select="PostalAddress/City">
       <TR>
        <TH ALIGN='right'>City:</TH>
        <TD><xsl:value-of select="."/></TD>
       </TR>
      </xsl:for-each>
      <xsl:for-each select="PostalAddress/PoliticalUnit_State">
       <TR>
        <TH ALIGN='right'>State:</TH>
        <TD><xsl:value-of select="."/></TD>
       </TR>
      </xsl:for-each>
      <xsl:for-each select="PostalAddress/Country">
       <TR>
        <TH ALIGN='right'>Country:</TH>
        <TD><xsl:value-of select="."/></TD>
       </TR>
      </xsl:for-each>
     </xsl:for-each>
    </TABLE>
   </BODY>
  </xsl:template>

  <xsl:template match='OrgProductStatus'>
     <TR>
      <TH ALIGN='right'>Org Status:</TH>
      <TD><xsl:value-of select='Status'/></TD>
     </TR>
     <TR>
      <TH ALIGN='right'>Status Date:</TH>
      <TD>
       <xsl:value-of select='concat(substring(ChangeDate, 1, 10), " ",
                                    substring(ChangeDate, 12, 8))'/>
      </TD>
     </TR>
  </xsl:template>

 </xsl:transform>