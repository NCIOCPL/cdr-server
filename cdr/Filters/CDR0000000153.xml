        <span class="insertproposed">
         <xsl:text>]</xsl:text>
        </span>
       </xsl:when>
       <xsl:otherwise>
        <span class="insertapproved">
         <xsl:text>]</xsl:text>
        </span>
       </xsl:otherwise>
      </xsl:choose>
     </xsl:when>
     <xsl:when                    test = "@InsertionOrDeletion = 'Deletion'">
