<?xml version="1.0" encoding="UTF-8" ?>
<!--
     ClinicalTrialSearchString.xml

     BZIssue::2095 - new document type requested by Lakshmi
  -->

<!--===================================================================-->
<schema              xmlns           = 'http://www.w3.org/2001/XMLSchema'>
<!--===================================================================-->

  <annotation>
    <documentation>
     This schema is for documents used to store search strings that we
     may use in CDR and other NCI Web site documents.  These documents
     will be searchable via the Advanced Search screen.
   </documentation>
  </annotation>

<!--=====================================================================-->
<!--                  COMMON CDR SCHEMA COMPONENTS                       -->
<!--=====================================================================-->
  <include           schemaLocation  = 'CdrCommonSchema.xml'/>

<!--===================================================================-->
<!--                  TOP-LEVEL DOCUMENT ELEMENT                       -->
<!--===================================================================-->
  <element           name            = 'ClinicalTrialSearchString'
                     type            = 'ClinicalTrialSearchString'/>

<!--===================================================================-->
<!--                        DOCUMENT TYPE                              -->
<!--===================================================================-->
  <complexType       name            = 'ClinicalTrialSearchString'>
    <sequence>
      <element       name            = 'SearchString'
                     type            = 'ExternalRef'/>
      <element       name            = 'Description'
                     type            = 'string'/>
      <element       name            = 'Use'
                     type            = 'string'
                     minOccurs       = '0'
                     maxOccurs       = 'unbounded'/>
      <element       name            = 'EnteredBy'
                     type            = 'NotEmptyString'/>
      <element       name            = 'EntryDate'
                     type            = 'date'/>
    </sequence>
    <attribute       name            = 'xmlns:cdr'
                     type            = 'anyURI'
                     minOccurs       = '0'/>
  </complexType>

</schema>
