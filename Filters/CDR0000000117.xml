<?xml version="1.0"?>
  <xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                 version="1.0">
   <xsl:output method="html"/>

   <xsl:template match="/">
    <html>
     <head>
      <title><xsl:value-of select="document('cdrutil:/docid')"/></title>
     </head>
     <basefont face='Arial, Helvetica, sans-serif' />
     <xsl:apply-templates select='Country'/>
    </html>
   </xsl:template>

   <xsl:template match='Country'>
    <body>
     <center>
      <b>
       <font size='4'>Country QC Report</font>
       <br />
       <font size='3'>
         <xsl:value-of 
           select="document('cdrutil:/date/%25B %25#d, %25Y %25#I:%25M%25p')"/>
       </font>
      </b>
     </center>
     <br /><br />
     <table border ='0'>
      <tr>
       <th align='right' nowrap='1'>Full Name: </th>
       <td><xsl:value-of select='CountryFullName'/></td>
      </tr>
      <xsl:for-each select='CountryShortName'>
       <tr>
        <th align='right' nowrap='1'>Short Name: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <xsl:for-each select='CountryAlternateName'>
       <tr>
        <th align='right' nowrap='1'>Alternate Name: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <tr>
       <th align='right'>Continent: </th>
       <td><xsl:value-of select='Continent'/></td>
      </tr>
      <tr>
       <th align='right' nowrap='1'>Postal Code Position: </th>
       <td><xsl:value-of select='PostalCodePosition'/></td>
      </tr>
      <xsl:for-each select='DateLastModified'>
       <tr>
        <th align='right' nowrap='1'>Date Last Modified: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
      <xsl:for-each select='PdqKey'>
       <tr>
        <th align='right' nowrap='1'>PDQ Key: </th>
        <td><xsl:value-of select='.'/></td>
       </tr>
      </xsl:for-each>
     </table>
    </body>
   </xsl:template>

  </xsl:transform>
