<?xml      version = "1.0"?>
<!--
 ================================================================
     $Id$

     Filter to process Protocol HP Titles
        Written by Volker Englisch, 2004-08-01

     $Log: not supported by cvs2svn $
 ================================================================ -->
<xsl:transform               xmlns:xsl = "http://www.w3.org/1999/XSL/Transform"
                               version = "1.0"
                             xmlns:cdr = "cips.nci.nih.gov/cdr"
               exclude-result-prefixes = "cdr">
 
 <!-- 
 ==================================================================
 Display the Professional and Original Title
 ================================================================== -->
 <xsl:template                   match = "//ProtocolTitle">
  <xsl:if                         test = "@Type = 'Professional'">
   <span class="big">Professional Title</span>
   <br />
   <xsl:apply-templates/>
   <br />
   <br />
  </xsl:if>

  <xsl:if                         test = "@Type = 'Original'">
   <span class="big">Original Title</span>
   <br />
   <xsl:apply-templates/>
   <br />
   <br />
  </xsl:if>
 </xsl:template>
</xsl:transform>
